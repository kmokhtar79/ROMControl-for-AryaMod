<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:id="@+id/googleDrawer" android:background="?attr/nav_drawer_bg_color">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="168dp"
        android:background="?attr/nav_drawer_header" android:id="@+id/navigationHeader"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#55000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#99ffffff"
                android:textSize="26sp"
                android:text="AryaMod ROM Control"
                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:paddingStart="25dp" />
        </LinearLayout>

    </RelativeLayout>


    <View android:layout_width="fill_parent" android:background="#1f000000"
        android:layout_height="1dp" android:id="@+id/separator"
        android:layout_below="@+id/navigationHeader" android:layout_marginBottom="1dp" />

    <android.support.v7.widget.RecyclerView android:id="@+id/drawerList"
        android:layout_width="fill_parent" android:clickable="true" android:scrollbars="vertical"
        android:layout_height="fill_parent"
        android:layout_below="@+id/separator" />

</RelativeLayout>